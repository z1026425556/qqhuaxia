<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pengcheng.dao.SignInMapper">

    <insert id="addOne" useGeneratedKeys="true" keyProperty="id" parameterType="com.pengcheng.domain.SignIn">
        insert into sign_in(user_id,mouth_count,update_time) values(${userId},${mouthCount},#{updateTime});
    </insert>

    <update id="updateOne"  parameterType="com.pengcheng.domain.SignIn">
        update sign_in
        <trim prefix="set" suffixOverrides=",">
            <if test="userId!=null">user_id=${userId},</if>
            <if test="mouthCount!=null">mouth_count=${mouthCount},</if>
            <if test="updateTime!=null">update_time=#{updateTime},</if>
        </trim>
        where id=${id};
    </update>

    <select id="findByUserId" resultType="com.pengcheng.domain.SignIn">
        select id,user_id as userId,mouth_count as mouthCount,update_time as updateTime from sign_in where user_id=${userId};
    </select>

</mapper>